<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.narmware.samista.activity.CameraActivity">

    <RelativeLayout
        android:id="@+id/rel_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_lead"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

        <ImageView
            android:id="@+id/img_placeholder"
            app:srcCompat="@drawable/ic_selfie"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_take_photo"
        android:text="Take photo again"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/rel_img"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:minHeight="1dp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_confirm"
        android:text="Confirm Close"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:minHeight="1dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
